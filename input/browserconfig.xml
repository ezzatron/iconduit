<%

const {
  color,
  output: {
    windowsTile: {
      windowsTileLarge: {path: large} = {},
      windowsTileMedium: {path: medium} = {},
      windowsTileWide: {path: wide} = {},
    } = {},
    windowsTileSmall: {
      windowsTileSmall: {path: small} = {},
    } = {},
  },
} = manifest

%><?xml version="1.0" encoding="utf-8"?>
<browserconfig>
  <msapplication>
    <tile>
      <TileColor><%= color.tile %></TileColor><% if (small) { %>
      <square70x70logo src="<%= small %>" /><% } %><% if (medium) { %>
      <square150x150logo src="<%= medium %>" /><% } %><% if (large) { %>
      <square310x310logo src="<%= large %>" /><% } %><% if (wide) { %>
      <wide310x150logo src="<%= wide %>" /><% } %>
    </tile>
  </msapplication>
</browserconfig>
