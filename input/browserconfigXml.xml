<%

const {
  color,
  output: {
    windowsTileSmall: {
      'small@2x': {path: small} = {},
    } = {},
    windowsTileMedium: {
      'medium@2x': {path: medium} = {},
    } = {},
    windowsTileLarge: {
      'large@2x': {path: large} = {},
    } = {},
    windowsTileWide: {
      'wide@2x': {path: wide} = {},
    } = {},
  },
} = manifest

%><?xml version="1.0" encoding="utf-8"?>
<browserconfig>
  <msapplication>
    <tile>
      <TileColor><%= color.tile %></TileColor><% if (small) { %>
      <square70x70logo src="<%= small %>" /><% } %><% if (medium) { %>
      <square150x150logo src="<%= medium %>" /><% } %><% if (large) { %>
      <square310x310logo src="<%= large %>" /><% } %><% if (wide) { %>
      <wide310x150logo src="<%= wide %>" /><% } %>
    </tile>
  </msapplication>
</browserconfig>
