<%

const smallUrl = consumer.imageUrl('windowsTileSmall', 'small@2x')
const mediumUrl = consumer.imageUrl('windowsTileMedium', 'medium@2x')
const largeUrl = consumer.imageUrl('windowsTileLarge', 'large@2x')
const wideUrl = consumer.imageUrl('windowsTileWide', 'wide@2x')

%><?xml version="1.0" encoding="utf-8"?>
<browserconfig>
  <msapplication>
    <tile>
      <TileColor><%= manifest.color.tile %></TileColor><% if (smallUrl) { %>
      <square70x70logo src="<%= smallUrl %>" /><% } %><% if (mediumUrl) { %>
      <square150x150logo src="<%= mediumUrl %>" /><% } %><% if (largeUrl) { %>
      <square310x310logo src="<%= largeUrl %>" /><% } %><% if (wideUrl) { %>
      <wide310x150logo src="<%= wideUrl %>" /><% } %>
    </tile>
  </msapplication>
</browserconfig>
