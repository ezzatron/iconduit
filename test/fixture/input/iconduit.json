{
  "name": "Iconduit",
  "definitions": {
    "color": {
      "iconduitorange": "#D58B41",
      "iconduitpink": "#D5415C"
    },
    "input": {
      "apple-touch-icon-masked": {
        "strategy": "composite",
        "options": {
          "mask": "icon-mask-ios-squircle",
          "layers": [
            {"input": "icon", "multiplier": 2, "style": "apple-touch-icon-scale"},
            {"input": "icon-background", "multiplier": 2, "style": "apple-touch-icon-scale"}
          ]
        }
      }
    },
    "output": {
      "apple-touch-icon-masked": {
        "input": "apple-touch-icon-masked",
        "name": "apple-touch-icon-masked-[dimensions].png",
        "sizes": ["apple-touch-icon-retina"]
      }
    }
  },
  "colors": {
    "background": "iconduitorange",
    "foreground": "iconduitpink"
  },
  "inputs": {
    "icon": "./icon/icon.png",
    "icon-background": "./icon/background.svg",
    "icon-bleed": "./icon/bleed.svg",
    "icon-silhouette": "./icon/silhouette.svg"
  },
  "outputs": {
    "include": [
      "apple-touch-icon-masked"
    ],
    "exclude": [
      "apple-touch-startup",
      "browserconfig-xml",
      "favicon-ico",
      "index-html",
      "macos-icns",
      "manifest-json",
      "maskable-icon",
      "open-graph-image",
      "service-worker",
      "twitter-card-image",
      "windows-ico"
    ]
  }
}
